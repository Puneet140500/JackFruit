<form form action="/{{role}}/signup" method="post" enctype="multipart/form-data">
  <div class="container">
    <h1>Sign Up as {{role}}</h1>
    <p>Please fill in this form to Sign Up</p>
    <hr>

    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username" id="username" required>

    <label for="password"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" id="password" required>

    <label for="name"><b>Name</b></label>
    <input type="text" placeholder="Enter name" name="name" id="name" required>

    <label for="address"><b>Address</b></label>
    <input type="text" placeholder="Enter address" name="address" id="address" required>

    <label for="phone"><b>Phone</b></label>
    <input type="text" placeholder="Enter phone" name="phone" id="phone" required>

    <label><b>Image</b></label>
    <input onchange=preview(this) type="file" id="image" name="image" accept="image/*" required>

    <img src="" alt="" id="pre">

    <label for="bio"><b>Bio</b></label>
    <input type="text" placeholder="Enter bio" name="bio" id="bio" required>

    {{#if hotel}}
        <label for="delivery"><b>Delivery</b></label>
            <div class="below">
                <input type="radio" name="delivery" value=1 id=""><label for="">Yes</label>
                <input type="radio" name="delivery" value=0 id=""><label for="">No</label><br>
            </div>
        <label for="open"><b>Open</b></label>
            <div class="below">
                <input type="radio" name="open" value=1 id=""><label for="">Yes</label>
                <input type="radio" name="open" value=0 id=""><label for="">No</label>
            </div>
    {{/if}}

    <button type="submit" class="registerbtn">Signup</button>
  </div>
  
  <div class="container signin">
    <p>Already have an account? <a href="/{{role}}/login">Login</a>.</p>
  </div>
</form>


<script>
    let preview = (e) => {
        var file = document.querySelector("#image").files[0]
        
        var img = document.getElementById("pre");
        var reader = new FileReader();
        reader.onloadend = function() {
             img.src = reader.result;
        }
        reader.readAsDataURL(file);
};
</script>