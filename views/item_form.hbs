<form action="/hotel/item/create" method="post" enctype="multipart/form-data">
  <div class="container">
    <h1>Add new item</h1>
    <p>Please fill in this form to add a new item</p>
    <hr>

    <label for="name"><b>Name</b></label>
    <input type="text" placeholder="Enter name" name="name" id="name" required>

    <label for="details"><b>Details</b></label>
    <input type="text" placeholder="Enter details" name="details" id="details" required>

    <label for="cost"><b>Cost</b></label>
    <input type="text" placeholder="Enter cost" name="cost" id="cost" required>

    <label><b>Image</b></label>
    <input onchange=preview(this) type="file" id="image" name="image" accept="image/*" required>

    <img src="" alt="" id="pre">

    <label for="available"><b>Available</b></label>
        <div class="below">
            <input type="radio" name="available" value=1 id=""><label for="">Yes</label>
            <input type="radio" name="available" value=0 id=""><label for="">No</label><br>
        </div>

    <button type="submit" class="registerbtn">Add</button>
  </div>
</form>


<script>
    let preview = (e) => {
        var file = document.querySelector("#image").files[0]
        
        var img = document.getElementById("pre");
        var reader = new FileReader();
        reader.onloadend = function() {
             img.src = reader.result;
        }
        reader.readAsDataURL(file);
};
</script>