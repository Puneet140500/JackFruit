<div class="centered">
    
    <ul class="collection">
        {{#each results}}
                <li class="collection-item avatar">
                    <a href="/hotel/details/{{this.username}}" class="{{#if this.open}} {{else}} inactive {{/if}}">
                        <img src="/hotel/{{this.image}}" alt="" class="circle">
                        <span class="title">{{this.name}}</span> <i class="material-icons tiny {{#if this.delivery}} safe {{else}} danger {{/if}}">delivery_dining</i>
                        <p>
                            <i class="material-icons tiny">phone</i> {{this.phone}} <br>
                            <i class="material-icons tiny">location_on</i>{{this.address}} <br>
                            {{this.bio}}
                        </p>
                    </a>
                </li>
        {{/each}}
    </ul>

</div>












