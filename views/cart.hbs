    <div class="container clearfix">

        <div class="fl left">
            <h2 class="subtotal">Subtotal: &#x20b9; <span>{{total_cost}}</span></h2>
            <h3 class="shipping">Shipping: &#x20b9; <span>{{delivery_cost}}</span></h3>
        </div>


