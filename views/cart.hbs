{{#each hotelOrders}}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="full card horizontal">
                    {{!-- <div class="card-image"><img src="/hotel/{{data.h_image}}"></div> --}}
                    <div class="little card-image waves-effect waves-block waves-light">
                        <img class="activator" src="/hotel/{{data.h_image}}">
                    </div>
                    <div class="card-stacked">
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">
                            <h5>{{data.h_name}} @ {{total_h_cost}} {{#if this.delivery_chosen}} + {{h_delivery_cost}} {{/if}}</h5>
                            <br>
                            {{data.h_username}}
                            <br>
                            {{data.h_phone}}
                            <br>
                            {{data.h_address}}
                            <br>
                            {{data.bio}}
                            <i class="material-icons right">more_vert</i>
                        </span>
                    </div>

                    <div class="card-action">
                        <p>
                            {{#if this.delivery_provided}}
                                <form action="/customer/cart/deliver" method="post">
                                    <span>
                                        {{!-- <label for=""><i class="material-icons small">delivery_dining</i></label> --}}
                                        Delivery:
                                        <label>
                                            <input onchange="submit()" type="radio" name={{@key}} value=1 id="" {{#if this.delivery_chosen}} checked {{/if}}>
                                            <span>Yes</span>
                                        </label>
                                        <label>
                                            <input onchange="submit()" type="radio" name={{@key}} value=0 id="" {{#unless this.delivery_chosen}} checked {{/unless}}>
                                            <span>No</span>
                                        </label>
                                    </span>
                                </form>
                            {{/if}}
                        </p>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="centered flex">
           
        {{#each orders}}
            <div class="card sticky-action">

                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="/item/{{this.i_image}}">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">
                        {{this.i_name}} @ {{this.i_quantity}} &#215; {{this.i_cost}}
                        <i class="material-icons right">more_vert</i>
                    </span>
                </div>

                <div class="card-action">
                    <p>

                        <div class="flex">
                            <form action="/customer/cart/{{this.i_id}}/remove" method="post">  
                            <button class="btn waves-effect waves-light" type="submit" name="action">
                                Remove
                                <i class="material-icons right">delete</i>
                            </button>
                            {{!-- <button type="submit" name="action" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></button> --}}
                            </form> 
                            
                                {{!-- <span for="">Quantity</span> --}}
                            <form action="/customer//cart/{{this.i_id}}/quantity" method="post">
                                <input min="1" onchange="submit()" type="number" name=quantity value={{this.i_quantity}} id=""></span>
                            </form>
                        </div>
                        
                            
                    </p>
                </div>

                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{this.i_name}} ({{this.category}})
                        <i class="material-icons right">close</i>
                    </span>
                    <p>{{this.i_details}}</p>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}


